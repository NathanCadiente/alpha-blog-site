<h1 style="text-align: center">All Alpha Bloggers</h1>
<div class="center">
  <%= will_paginate %>
</div>
<% @users.each do |user| %>
  <div class="row center">
    <div class="well col-md-8 col-md-offset-2">
      <%= link_to gravatar_for(user), user_path(user) %>
      <div>
        <%= link_to user.username, user_path(user) %>
      </div>
      <div>
        <small><%= pluralize(user.articles.count, "article") if user.articles %></small>
        <% if logged_in? and current_user.admin? %>
          <%= link_to 'Delete this user', user_path(user), method: :delete, data: { confirm: "Are you sure you want to delete the user and all their articles?" } %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
<div class="center">
  <%= will_paginate %>
</div>